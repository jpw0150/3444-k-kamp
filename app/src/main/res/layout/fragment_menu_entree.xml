<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/me_1"
    android:background="@drawable/gradient_list"
    tools:context=".fragments.menuEntreeFragments.MenuEntreeMeatFragment">


    <TextView
        android:id="@+id/step_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="49dp"
        android:layout_marginLeft="49dp"
        android:layout_marginTop="43dp"
        android:text="@string/step_1_pick_your_meat"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/boneless_icon"
        android:layout_width="124dp"
        android:layout_height="137dp"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="52dp"
        android:src="@drawable/bonesless_wing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/step_1"
         />

    <ImageView
        android:id="@+id/bone_wing"
        android:layout_width="140dp"
        android:layout_height="152dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:src="@drawable/bone_wing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/boneless_icon"
        app:layout_constraintTop_toBottomOf="@+id/step_1" />

    <ImageView
        android:id="@+id/tenders"
        android:layout_width="250dp"
        android:layout_height="172dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/chicken_tender"
        app:layout_constraintBottom_toTopOf="@+id/button_tenders"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_boneless"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="12dp"
        android:background="@android:color/black"
        android:text="@string/boneless"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boneless_icon" />

    <Button
        android:id="@+id/button_bone"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:background="@android:color/black"
        android:text="@string/bone"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bone_wing" />

    <TextView
        android:id="@+id/calories_boneless"
        android:layout_width="116dp"
        android:layout_height="17dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:text="@string/_43_calories_ea"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_boneless" />

    <TextView
        android:id="@+id/calories_bone"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:layout_marginStart="103dp"
        android:layout_marginLeft="103dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="46dp"
        android:layout_marginRight="46dp"
        android:text="@string/_56_calories_ea"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/calories_boneless"
        app:layout_constraintTop_toBottomOf="@+id/button_bone" />

    <TextView
        android:id="@+id/contains_wheat_boneless"
        android:layout_width="113dp"
        android:layout_height="18dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="11dp"
        android:text="@string/contains_wheat"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories_boneless" />

    <TextView
        android:id="@+id/contains_wheat_tenders"
        android:layout_width="113dp"
        android:layout_height="18dp"
        android:layout_marginEnd="156dp"
        android:layout_marginRight="156dp"
        android:layout_marginBottom="80dp"
        android:text="@string/contains_wheat"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_tenders"
        android:layout_width="121dp"
        android:layout_height="42dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginBottom="7dp"
        android:background="@android:color/black"
        android:text="@string/tenders"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/calories_tenders"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/contains_wheat_bone"
        android:layout_width="113dp"
        android:layout_height="18dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="43dp"
        android:layout_marginRight="43dp"
        android:text="@string/contains_wheat"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calories_bone" />

    <TextView
        android:id="@+id/calories_tenders"
        android:layout_width="110dp"
        android:layout_height="18dp"
        android:layout_marginStart="145dp"
        android:layout_marginLeft="145dp"
        android:layout_marginBottom="1dp"
        android:text="@string/_70_calories_ea"
        app:layout_constraintBottom_toTopOf="@+id/contains_wheat_tenders"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_help_image_meat"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/help"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/button_refill_image_meat"
        android:layout_width="27dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/refill"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>